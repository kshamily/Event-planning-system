
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/signin.css" rel="stylesheet" />


<div class="text-center form-signin">

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary("", htmlAttributes: new { @class = "text-danger" })

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="txtUserName" class="sr-only">Username</label>
        <input type="text" id="txtUserName" name="userName" class="form-control" placeholder="Username" required autofocus>
        <br />
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="rememberme"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    }


</div>
