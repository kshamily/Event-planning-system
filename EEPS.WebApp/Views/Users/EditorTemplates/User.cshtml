@model EEPS.DAL.Data.UserDetail

<div class="form-horizontal col-lg-12">
    <div>
        <div>
            @Html.HiddenFor(model => model.UserId, new { htmlAttributes = new { @class = "k-textbox" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Full Name", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "k-textbox" } })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("User Name", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "k-textbox" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Password", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.PasswordFor(model => model.Password, new { @class = "k-textbox" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "k-textbox" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Phone Number", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "k-textbox" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Role", htmlAttributes: new { @class = "control-label" })
        <div>
            <select class="k-widget k-dropdown k-dropdown-wrap k-state-default" 
                    id="role"
                    name="role"
                    data-bind="value:Role">
                <option selected value="user">User</option>
                <option value="admin">Admin</option>
            </select>

            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Is Active", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "k-textbox" } })
            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
</div>